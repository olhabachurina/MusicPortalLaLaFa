@model BestMusPortal.Services.DTO.SongDTO

@{
    ViewData["Title"] = "Delete Song";
    Layout = "_Layout";
}

<h1>Delete Song</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mood)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mood)
        </dd>
        <dt class="col-sm-2">
            Music File
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.MusicFilePath))
            {
                <audio controls>
                    <source src="@Url.Content($"~/{Model.MusicFilePath}")" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            }
            else
            {
                <span>No Music File</span>
            }
        </dd>
        <dt class="col-sm-2">
            Video File
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.VideoFilePath))
            {
                <video width="200" height="150" controls>
                    <source src="@Url.Content($"~/{Model.VideoFilePath}")" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            }
            else
            {
                <span>No Video File</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SongId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>     
</div>