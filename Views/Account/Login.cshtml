@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}

<h2 data-lang="ru">Вход</h2>
<h2 data-lang="uk" style="display: none;">Вхід</h2>
<h2 data-lang="en" style="display: none;">Log in</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <h4 data-lang="ru">Используйте локальную учетную запись для входа.</h4>
            <h4 data-lang="uk" style="display: none;">Використовуйте локальний обліковий запис для входу.</h4>
            <h4 data-lang="en" style="display: none;">Use a local account to log in.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label" data-lang="ru">Имя пользователя</label>
                <label asp-for="Username" class="control-label" data-lang="uk" style="display: none;">Ім'я користувача</label>
                <label asp-for="Username" class="control-label" data-lang="en" style="display: none;">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" data-lang="ru">Пароль</label>
                <label asp-for="Password" class="control-label" data-lang="uk" style="display: none;">Пароль</label>
                <label asp-for="Password" class="control-label" data-lang="en" style="display: none;">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe" data-lang="ru">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                    <label asp-for="RememberMe" data-lang="uk" style="display: none;">
                        <input asp-for="RememberMe" />
                        Запам'ятати мене
                    </label>
                    <label asp-for="RememberMe" data-lang="en" style="display: none;">
                        <input asp-for="RememberMe" />
                        Remember me
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" data-lang="ru">Войти</button>
                <button type="submit" class="btn btn-primary" data-lang="uk" style="display: none;">Увійти</button>
                <button type="submit" class="btn btn-primary" data-lang="en" style="display: none;">Log in</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}